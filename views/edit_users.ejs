
<%- include("layout/header")  %>

<div class="container">
   <div class="row">
    <div class="col-lg-6 mx-auto mt-4">
        <h3 class="text-success">Edit User (<%= user.name  %>)</h3>
        <form action="/update/<%= user._id  %>" method="post" id="add-form" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="name" class="form-label">Name</label>
              <input type="text" name="name" class="form-control" placeholder="Enter name" value = <%= user.name %> required>
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" name="email" class="form-control" placeholder="Enter email" value = <%= user.email %> required>
            </div>
            <div class="mb-3">
            <label for="phone" class="form-label">Phone</label>
            <input type="tel" name="phone" class="form-control" placeholder="Enter phone" value = <%= user.phone %> required>
          </div>
          <div class="mb-3">
          <label for="image" class="form-label">Select Image</label>
          <input type="file" class="form-control" name="image" >
          <img src="/<%= user.image %>" alt="" width="100" class="img-t mt-1" >
        </div>
            <input type="hidden" name="old_image" value="<%= user.image  %>">
            <input type="submit" name="submit" value="Update User" class="btn btn-success btn-lg">
          </form>
    </div>
   </div> 
</div>

<%- include("layout/footer")  %>
